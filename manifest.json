{
  "manifest_version": 3,
  "name": "Twitch Cleaner",
  "version": "1.1",
  "description": "Hide showcase and enable minimal mode on Twitch.",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "web_accessible_resources": [
    {
      "resources": ["twitch.css"],
      "matches": ["*://*.twitch.tv/*"]
    }
  ]
}
